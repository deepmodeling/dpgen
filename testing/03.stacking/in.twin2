# Input file for Stack Fault Energy surface of Aluminum
# Phillip Spear, 2012

# ------------------------ INITIALIZATION ----------------------
units		metal
dimension	3
boundary	p p s
atom_style	atomic
variable	latt_a		equal 4.04
variable	protct		equal 0.01
variable	drange		equal 0.01
variable	x_displace	equal (${latt_a}/sqrt(6))
variable	numb_x		equal 4
variable	numb_y		equal 4
variable	numb_z		equal 13
variable	size_x		equal ${latt_a}*${numb_x}*sqrt(6)/2
variable	size_y		equal ${latt_a}*${numb_y}*sqrt(2)/2
variable	size_z		equal ${latt_a}*${numb_z}*sqrt(3)/3
variable	size_px		equal ${size_x}-${protct}
variable	size_py		equal ${size_y}-${protct}
variable	size_pz		equal ${size_z}-${protct}
variable	r00_lo		equal ${latt_a}*(07)*sqrt(3)/3
variable	r00_up		equal ${latt_a}*(13)*sqrt(3)/3
variable	r01_lo		equal ${latt_a}*(00)*sqrt(3)/3
variable	r01_up		equal ${latt_a}*(06)*sqrt(3)/3
# variable	r02_lo		equal ${latt_a}*(13)*sqrt(3)/3
# variable	r02_up		equal ${latt_a}*(26)*sqrt(3)/3
variable	r10_lo		equal ${r00_lo}-${drange}
variable	r10_up		equal ${r00_up}-${drange}
variable	r11_lo		equal ${r01_lo}-${drange}
variable	r11_up		equal ${r01_up}-${drange}
# variable	r12_lo		equal ${r02_lo}-${drange}
# variable	r12_up		equal ${r02_up}-${drange}

# ----------------------- ATOM DEFINITION ----------------------
lattice		fcc ${latt_a}
region		whole block -${protct} ${size_px} -${protct} ${size_py} -${protct} ${size_pz} units box
create_box	1 whole
lattice		fcc ${latt_a} orient x 1 1 2 orient y -1 1 0 orient z -1 -1 1
create_atoms	1 region whole
region		r10 block  -${protct} ${size_px} -${protct} ${size_py} ${r10_lo} ${r10_up} units box
region		r11 block  -${protct} ${size_px} -${protct} ${size_py} ${r11_lo} ${r11_up} units box
# region		r12 block  -${protct} ${size_px} -${protct} ${size_py} ${r12_lo} ${r12_up} units box
group		r10 region r10
group		r11 region r11
# group		r12 region r12
mass		1 27

# ----------------------- FORCE FIELDS -----------------------
include		potential.mod

# ------------------------- before disp -----------------------
compute		peratom all pe/atom
compute		eatoms all reduce sum c_peratom
thermo		1
thermo_style	custom step pe pxx pyy pzz c_eatoms
dump		1 all custom 10 dump.relax type xs ys zs c_peratom fx fy fz

fix		1 all setforce 0 0 NULL
min_style	cg
minimize	1e-10 1e-10 1000 1000

run		0
variable	E equal "c_eatoms"
variable	Eo equal $E

# ------------------------- Displacement -----------------------

# delete_atoms	group r12
displace_atoms	r10 move -${x_displace} 0.0 0.0 units box
displace_atoms	r11 move ${x_displace} 0.0 0.0 units box

fix		1 all setforce 0 0 NULL
min_style	cg
minimize	1e-10 1e-10 1000 1000

run		0
variable	Ef equal "c_eatoms"
variable	Cf equal 1.60217657e-16
variable	A equal (${size_x}*${size_y})*1e-20
variable	SFE equal ((${Ef}-${Eo})*${Cf})/${A}

# SIMULATION DONE
#print ${x}
print "All done"
print "Initial energy of atoms = ${Eo} eV"
print "Final energy of atoms = ${Ef} eV"
print "Twin energy = ${SFE} mJ/m^2"
